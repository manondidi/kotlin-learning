<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e8e8e8">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/avtar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="码农弟弟"
                android:textColor="#171717"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintLeft_toRightOf="@id/icon"
                app:layout_constraintRight_toLeftOf="@id/date"
                app:layout_constraintTop_toTopOf="@id/icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@mipmap/come"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="#95989a"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon" />

            <ImageView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@mipmap/car"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@mipmap/clock"
                app:layout_constraintLeft_toRightOf="@id/car"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="07:30"
                android:textColor="#171717"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/clock"
                app:layout_constraintLeft_toRightOf="@id/clock"
                app:layout_constraintTop_toTopOf="@id/clock" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="2017/01"
                android:textColor="#999999"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:text="1"
                android:textColor="#1fabff"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/date"
                app:layout_constraintLeft_toLeftOf="@+id/date"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="#1fabff"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toLeftOf="@id/date"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="@id/date"
                app:layout_constraintTop_toTopOf="@id/day" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>